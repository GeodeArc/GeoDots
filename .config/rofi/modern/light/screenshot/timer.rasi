@import "options/font.rasi"
@import "options/wallpaper.rasi"
@import "options/colors.rasi"

// PROPERTIES
* {
    text:                        #000;
    background:                  #EEEEEE;
    background-alt:              #D8D8D8;
    selected:                    #999999;
}

// WINDOW
window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       750;

    // FOR ALL WIDGETS
    enabled:                     true;
    border:                      1px solid;
    border-radius:               20px;
    border-color:                @foreground;
    cursor:                      "default";
    background-color:            @background;
}

// MAINBOX
mainbox {
    enabled:                     true;
    border-color:                @selected;
    background-color:            transparent;
    children:                    [ "inputbar", "listview", "message" ];
}

// TOP BAR
inputbar {
    enabled:                     true;
    spacing:                     0px;
    padding:                     50px 80px;
    background-color:            transparent;
    background-image:            @wallpaper;
    children:                    [ "textbox-prompt-colon", "dummy","prompt"];
}

dummy {
    // CENTER PADDING
    background-color:            transparent;
}

textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    str:                         "ï”Œ  Screenshot";
    padding:                     12px;
    border-radius:               100%;
    text-color:                  @text;
    background-color:            @background-alt;
}
prompt {
    enabled:                     true;
    padding:                     12px;
    border-radius:               100%;
    text-color:                  @text;
    background-color:            @background-alt;
}

// LIST
listview {
    enabled:                     true;
    columns:                     5;
    lines:                       1;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    spacing:                     15px;
    margin:                      15px;
    background-color:            transparent;
    cursor:                      "default";
}

// ELEMENTS
element {
    enabled:                     true;
    padding:                     30px 10px;
    border-radius:               12px;
    background-color:            transparent;
    text-color:                  @text;
    cursor:                      pointer;
}
element-text {
    font:                        "feather bold 32";
    background-color:            transparent;
    text-color:                  @text;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}
element normal.normal {
    background-color:            inherit;
    text-color:                  inherit;
}
element selected.normal {
    background-color:            @background-alt;
    text-color:                  @text;
}

// MESSAGE
message {
    enabled:                     true;
    padding:                     15px;
    background-color:            @background-alt;
    text-color:                  @text;
}
textbox {
    background-color:            inherit;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

