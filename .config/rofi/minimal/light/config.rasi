@import "options/colors.rasi"
@import "options/font.rasi"

// DEFAULT CONFIGURATION
configuration {    
    hover-select:               true;
    me-select-entry:            "";
    me-accept-entry:            "MousePrimary";
    drun-display-format:        "{name}";
    window-format:              "{w} Â· {c}";
}

// DEFAULT PROPERTIES
* {
    text:                        #000;
    background:                  #fff;
    alternate-normal-foreground: #000;
    alternate-normal-background: #fff;
    lines:                       10;
    columns:                     1;
    cycle:                       false;
}

// DEFAULT WINDOW
window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       680px;

    // FOR ALL WIDGETS
    enabled:                     true;
    border:                      1px solid;
    border-color:                @accent;
    text-color:                  @text;
    padding:                     0;
}

// DEFAULT MAINBOX
mainbox {
    enabled:                     true;
    spacing:                     0px;
    background-color:            transparent;
    orientation:                 vertical;
    children:                    [ "inputbar", "listbox" ];
}

// DEFAULT LISTBOX
listbox {
    spacing:                     10px;
    padding:                     10px;
    background-color:            transparent;
    orientation:                 vertical;
    children:                    [ "message", "listview" ];
}

// DEFAULT TOP BAR
inputbar {
    enabled:                     true;
    spacing:                     10px;
    padding:                     50px 50px;
    text-color:                  @text;
    children:                    [ "entry" ];
}
entry {
    enabled:                     true;
    expand:                      true;
    text-color:                  @text;
    cursor:                      text;
    placeholder:                 "Search";
    placeholder-color:           inherit;
}

// DEFAULT LIST
listview {
    enabled:                      true;
    columns:                      @columns;
    lines:                        @lines;
    cycle:                        @cycle;
    dynamic:                      false;
    scrollbar:                    false;
    layout:                       vertical;
    reverse:                      false;
    fixed-height:                 true;
    fixed-columns:                true;
  
    padding:                      10px;
    background-color:             @background;
    text-color:                   @text;
    border:                       0px;
    cursor:                       "default";
}

// ELEMENTS
element {
    enabled:                     true;
    spacing:                     5px;
    padding:                     10px;
    text-color:                  @text;
    cursor:                      pointer;
    orientation:                 vertical;
}
element normal.normal {
    background-color: inherit;
    text-color:                  @text;
}
element selected.normal {
    background-color: @accentlow;
}
