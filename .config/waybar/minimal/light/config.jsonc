{
    "spacing": 4,
    "height": 25,
    "modules-left": ["hyprland/workspaces", "custom/wallpaper", "custom/nightlight", "hyprland/window"],
    "modules-center": ["custom/spotify"],
    "modules-right": ["tray", "pulseaudio", "cpu", "memory", "disk", "clock", "custom/sidebar"],

  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": true,
    "all-outputs": false,
    "persistent-workspaces": {
      "*": 5
    }
  },
    "tray": {
      "spacing": 10
    },
    "clock": {
      "tooltip-format": "<big>[{:%Y %B}]</big>\n<tt><small>{calendar}</small></tt>",
      "format": "[{:%H:%M}]",
      "format-alt": "[{:%Y-%m-%d}]"
    },
    "custom/wallpaper": {
      "format": "",
      "on-click": "waypaper",
      "on-click-right": "waypaper --random",
    },
    "custom/nightlight": {
      "format": "󰃟",
      "on-click": "pgrep hyprsunset && { pkill hyprsunset; notify-send -i night-light-disabled-symbolic -e 'Night Light Disabled'; } || { hyprsunset -t 4800 & notify-send -i night-light-symbolic -e 'Night Light Enabled'; }",
    },
    "cpu": {
      "format": "[CPU:{usage}%]"
    },
    "memory": {
      "format": "[MEM:{percentage}%]"
    },
    "disk": {
      "format": "[DSK:{percentage_used}%]",
      "path": "/",
    },
    "battery": {
      "format": "[BAT:{capacity}%]"
    },
    "pulseaudio": {
      "format": "[VOL:{volume}%]",
      "format-muted": "[VOL: M]",
      "on-click": "pavucontrol",
      "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },
    "custom/spotify": {
		  "interval": 1,
		  "exec": "~/Dots/Scripts/Hyprland/mediaexec.sh",
		  "on-click": "~/Dots/Scripts/Hyprland/mediatoggle.sh"
    },
  "custom/sidebar": {
      "format": "󱗼",
      "tooltip-format": "L: Sidebar\nR: Reload configuration (wait 5-10 seconds)",
      "on-click": "swaync-client -t",
      "on-click-right": "swaync-client -R && swaync-client -rs && sleep 1 && swaync-client -t"
  }
}
